<%- include('header') %>

        <div class="breadcrumbs">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Dashboard</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="#">Dashboard</a></li>
                            <li><a href="#">Table</a></li>
                            <li class="active">Basic table</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>

        <div class="content mt-3">
            <div class="animated fadeIn">
                <div class="row">
                    <div class="col-lg-12">
                        <form action="/admin/viewAdmin">
                        <div style="display: flex; max-width: 400px;">
                            <input type="text" value="<%= search %>" name="adminSearch" placeholder="Search..." style="flex: 1; padding: 8px; border: 1px solid #ccc; border-right: none; border-radius: 4px 0 0 4px;" />
                            <button type="submit" style="padding: 8px 16px; background-color: #28a745; color: white; border: 1px solid #28a745; border-radius: 0 4px 4px 0;">Search</button>
                        </div>

                        </form>
                        
                        <div class="card">
                            <div class="card-header">
                                <strong class="card-title">Basic Table</strong>
                            </div>
                            <div class="card-body">

                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Email</th>
                                            <th scope="col">Phone</th>
                                            <th scope="col">profile</th>
                                            <th scope="col">Status</th>
                                            <th scope="col">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for(var admin of allAdminData){ %>
                                        <tr>
                                            <th scope="row">1</th>
                                            <td><%= admin.name %> </td>
                                            <td><%= admin.email %> </td>
                                            <td><%= admin.phone %> </td>
                                            <td><img src="<%= admin.profile %>" height="100" /></td>
                                            <td>
                                                <% if(admin.status){%>
                                                <a href="/admin/SetInActiveAdmin/<%= admin.id %>" class="btn btn-success">Active</a>
                                                <% } else { %>  
                                                <a href="/admin/SetInActiveAdmin/<%= admin.id %>" class="btn btn-danger">Inative</a>
                                                <% } %>
                                            </td>
                                            <td>
                                                <a href="/admin/deleteAdmin/?adminId=<%= admin.id %>">
                                                 <i class="fa fa-trash"></i> </a> ||
                                            <a href="/admin/updateAdmin/<%= admin.id %>"><i class="fa fa-edit"></i></a> ||
                                            <i class="fa fa-eye"></i>
                                            </td>
                                            
                                        </tr>
                                        <% } %>

                                        <tr>
                                            <td colspan="7">
                                                <% for(var i=0; i<totalPage; i++){  %>
                                                    <a href="?page=<%= i %>&adminSearch=<%= search %>"><button><%= i+1 %></button></a>
                                                    <% } %>
                                            </td>
                                        </tr>

                                        <tr>
                                            <td colspan="7">
                                                <div class="btn-group">
                                                    <% const prevPage = Number(page) - 1; %>
                                                    <% const nextPage = Number(page) + 1; %>

                                                    <a href="?page=<%= prevPage %>&adminSearch=<%= search %>" class="btn btn-secondary btn-sm" <%= page <= 0 ? 'disabled' : '' %>>Prev</a>

                                                    <button class="btn btn-light btn-sm disabled"><%= Number(page) + 1 %></button>

                                                    <a href="?page=<%= nextPage %>&adminSearch=<%= search %>" class="btn btn-secondary btn-sm" <%= nextPage >= totalPage ? 'disabled' : '' %>>Next</a>
                                                </div>
                                            </td>

                                            <!-- <button><%= Number(page)+1 %></button> -->
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>


                </div>
            </div><!-- .animated -->
        </div><!-- .content -->


    </div><!-- /#right-panel -->

    <!-- Right Panel -->

 

<%- include('footer') %>